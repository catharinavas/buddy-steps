<h3>Add a new milestone</h3>
<%= simple_form_for [@goal, @milestone] do |f| %>
  <%= f.input :description %>
  <%= f.input :deadline, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.button :submit %>
<% end %>
<% @milestones.each do |milestone| %>
  <%= milestone.description %>
  <%= milestone.deadline %>
  <%= link_to 'Edit', edit_milestone_path(milestone) %>
  <%= link_to 'Delete', milestone_path(milestone), method: :delete, data: { confirm: 'Are you sure you want to delete? Think about your main goal!' } %>
<% end %>
