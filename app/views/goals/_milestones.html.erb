
<% if current_user.id == @goal.user_id %>
  <div class="flex">
    <a id="add-icon" class="text-teal-700 hover:text-teal-900 font-bold py-2 px-4 rounded-full mr-5" href="#"><%= fa_icon "plus-circle" %></a>
    <div id="add-milestone" class="hidden transition-soft transition-delay">
      <%= render "milestones/new_form", goal: @goal, milestone: @milestone %>
    </div>
  </div>
<% end %>
<table class="table-auto mx-auto">
  <thead class="text-gray-900 text-xs my-1">
<!--       <th></th>
    <th>Due date</th>
    <th></th> -->
  </thead>
  <tbody id="milestones">
    <% @milestones.each do |milestone| %>
      <%= render "milestones/milestone", milestone: milestone %>
    <% end %>
  </tbody>
</table>

