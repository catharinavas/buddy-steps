<h3>Add a new goal</h3>
<%= simple_form_for @goal, url: goal_path do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :deadline, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.association :category %>
  <%= f.button :submit, as: " " %>
<% end %>
