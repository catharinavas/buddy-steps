<div class="w-full mt-5 py-5 pl-5 md:pr-5 border-2 border-gray-200 md:rounded-lg bg-gray-200">
  <div class="lg:flex justify-between items-end">
    <p class="transition-soft uppercase font-bold text-gray-700 text-md pb-2 selected text-lg">
      Completed goals</p>
  </div>
  <div class="flex overflow-x-scroll flex-no-wrap scroll py-5 pl-5 sm:flex-wrap sm:overflow-visible sm:justify-center">
    <% @completed_goals.each do |completed_goal| %>
      <%= link_to goal_path(completed_goal), class: "scroll-card bg-gray-100 shadow-lg rounded-2xl pt-6 mr-4 p-4 w-56 h-64 text-center text-purple-700 block sm:mb-4 sm:px-0 flex-col justify-between" do %>
        <p class="font-sans font-semibold text-3xl">
          All done! Congrats!
        </p> <br>
        <h3 class="font-sans font-semibold text-base text-gray-800"><%= completed_goal.title.upcase %></h3>
        <div class="bg-gray-200 rounded-full py-1 w-3/4 mx-auto mt-3 mb-4">
        </div>
      <% end %>
    <% end %>
  </div>
</div>
