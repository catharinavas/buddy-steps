
<%= simple_form_for([ community, publication ], url: community_publications_path(community), remote: true) do |f|%>
  <%= f.input :title %>
  <%= f.input :content %>


  <% if ['celebrations'].include?(params[:type]) %>
    <%= f.association :publication_type, collection: PublicationType.where(name: 'Celebrations') %>
  <% else %>
    <%= f.association :publication_type, collection: PublicationType.where(name: ['News', 'Questions']) %>
  <% end %>

  <%= f.association :community, :as => :hidden, :input_html => { :value => community.id } %>
  <%= f.button :submit, as: " " %>
<% end %>
