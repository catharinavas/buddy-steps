<% if request.env['PATH_INFO'].include?("communities")%>

  <%= simple_form_for([ community, publication ], url: community_publications_path(community), remote: true) do |f|%>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.association :publication_type, collection: PublicationType.where(name: ['News', 'Question']) %>
    <%= f.association :community, :as => :hidden, :input_html => { :value => community.id } %>
    <%= f.button :submit, as: " " %>
  <% end %>

<% else %>

  <%= simple_form_for([publication], url: publications_path, remote: true) do |f|%>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.association :publication_type, collection: PublicationType.where(name: ['Pleasure', 'Frustration']) %>
    <%= f.button :submit, as: " " %>
  <% end %>

<% end %>
