<div class="publications-list m-5 md:m-10">
  <% all_publications.each do |publication| %>
    <div class="flex flex-col md:flex-row items-center mb-10 pt-5 w-full shadow rounded-lg border border-gray-200 bg-white">
      <div class="flex md:flex-col items-center w-1/6 flex-shrink-0 mx-1">
        <img src="https://image.flaticon.com/icons/svg/126/126115.svg" alt="newspaper icon" class="mt-8 mb-12 md:my-0 w-12">
      </div>

      <div class="flex flex-col md:w-5/6 p-8 md:pl-0">
        <%= link_to publication_path(publication) do %>
          <h2 class="font-bold mb-2 mt-5 md:mt-0 text-lg text-left"><%= publication.title %></h2>
        <% end %>
        <div class="text-gray-600 mb-16 md:mb-8 text-left">
          <span data-shown-text="<%= publication.id %>">
            <%= (publication.content.first(175)) %>
            <a href="#" class="read-toggle text-blue-300 font-bold" data-read-more="<%= publication.id %>" data-read-toggle="<%= publication.id %>">
                ...read more
            </a>
          </span>
          <span class="hidden-text hidden publication-content" data-hidden-text="<%= publication.id %>">
            <%= simple_format(publication.content) %>
            <a href="#" class="read-toggle text-blue-300 font-bold hidden" data-read-less="<%= publication.id %>" data-read-toggle="<%= publication.id %>">
                ^ hide
            </a>
          </span>
        </div>

        <div class="flex justify-between items-center pb-3 md:pb-0">
          <p class="text-blue-300 text-sm">
            Posted by
            <%= link_to "#{publication.user.first_name}", dashboard_path(publication.user),
              class: "italic underline"  %>
            in
            <%= link_to "#{publication.community.name}", community_path(publication.community),
              class: "italic underline" %>,
            on
            <%= publication.created_at.strftime('%d/%m/%Y at %I:%M') %>
          </p>
          <p class="text-blue-300 text-sm flex-shrink-0 ml-5">
            <%= link_to new_publication_clap_path(publication), remote: true,class: "border p-3 border-blue-300 rounded-full" do%>
              <span id="clap-count" data-clapID="<%= publication.id %>"><%= publication.claps.count %></span>
              <i class="text-xl fas fa-sign-language text-blue-300"></i>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
