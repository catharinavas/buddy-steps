<div id="publications" class="scroll-card flex-col mb-4 px-4 pb-1 w-56 opacity-100">
  <%= link_to community_path(community) do %>
    <h2 class="text-2xl text-center text-gray-600 mb-0 p-1"><%= community.name %></h2>
    <hr>
    <p class="text-center py-1 w-3/4 mx-auto text-gray-600 rounded-full font-sans font-medium text-xs">
      <%= community.publications.select { |pub| pub.created_at.to_date == Date.today }.count %> publications today
    </p>
  <% end %>
