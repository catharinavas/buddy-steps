<div class="body pt-16 sm:pt-32 bg-gray-100">
  <div class="modal-content py-8 sm:py-4 text-left px-6 border-t-8 border-purple-700 bg-white p-4 w-full sm:max-w-md mx-auto">
    <!--Title-->
    <h2 class="text-2xl font-bold text-gray-700 text-center">Forgot your password?</h2>
    <!--Body-->
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { class: "input", autocomplete: "email" } %>
      </div>

      <!--Footer-->
      <div class="w-full pt-2 items-center">
        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: "w-full" %>
        </div>
        <div class=" mt-3 cursor-pointer text-gray-600">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

  </div>

</div>
