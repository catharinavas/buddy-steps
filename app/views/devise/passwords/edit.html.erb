<div class="pt-16 sm:pt-32 bg-gray-100 h-screen">
  <div class="modal-content py-4 text-left px-6 border-t-8 border-purple-700 bg-white p-4 w-full sm:max-w-md mx-auto">
    <!--Title-->
    <h2 class="text-2xl font-bold text-gray-700 text-center">Change your password</h2>
    <!--Body-->
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>


      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", style: "margin-bottom: 0 !important;" },
                    hint_html: { class: "mt-1 mb-4 ml-2"} %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <!--Footer-->
      <div class="w-full pt-2 items-center">
        <div class="form-actions">
          <%= f.button :submit, "Change my password", class: "w-full" %>
        </div>
        <div class=" mt-3 cursor-pointer text-gray-600">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

  </div>

</div>
