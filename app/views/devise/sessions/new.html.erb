<div class="body pt-16 sm:pt-32 bg-gray-100">
  <div class="modal-content py-8 sm:py-4 text-left px-6 border-t-8 border-purple-700 bg-white p-4 w-full sm:max-w-md mx-auto">
    <!--Title-->
    <h2 class="text-2xl font-bold text-gray-700 text-center mb-5">Login</h2>
    <!--Body-->
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { class: "input", autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { class: "input", autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <!--Footer-->
      <div class="flex justify-center pr-12 md:pr-0 pt-2">
        <div class="form-actions mr-6">
          <%= f.button :submit, "Login" %>
        </div>
        <div class="my-auto cursor-pointer text-gray-600">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>

