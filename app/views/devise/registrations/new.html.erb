<div class="pt-16 sm:pt-32 bg-gray-100">
  <div class="modal-content py-8 sm:py-4 text-left px-6 border-t-8 border-purple-700 bg-white p-4 w-full sm:max-w-md mx-auto">
    <!--Title-->
    <h2 class="text-2xl font-bold text-gray-700 text-center mb-5">Sign up</h2>
    <!--Body-->
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    , input_html: { class: "input", autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: "input", autocomplete: "new-password", style: "margin-bottom: 0 !important;" },
                    hint_html: { class: "mt-1 mb-4 ml-2"} %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { class: "input", autocomplete: "new-password" } %>
      </div>

      <!--Footer-->
      <div class="flex w-full pr-12 md:pr-0 pt-2 items-center">
        <div class="form-actions mr-6">
          <%= f.button :submit, "Sign up" %>
        </div>
        <div class="my-auto cursor-pointer text-gray-600">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

  </div>

</div>
