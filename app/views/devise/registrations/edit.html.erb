<div class="body pt-16 sm:pt-32 bg-gray-100">
  <div class="modal-content py-8 sm:py-4 text-left px-6 border-t-8 border-purple-700 bg-white p-4 w-full sm:max-w-md mx-auto">
    <!--Title-->
    <div class="flex justify-between items-center py-3">
      <div class="m-auto">
        <p class="text-2xl font-bold text-gray-700 text-center">Edit Account Information</p>
      </div>
      <div class="modal-close cursor-pointer">
        <%= link_to :back do %>
        <svg class="fill-current text-gray-700" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
          <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
        </svg>
        <% end %>
      </div>
    </div>

    <!--Body-->
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="flex items-end">
          <!-- INPUT PHOTO -->
          <%= f.input :photo, input_html: { class: 'invisible', id: 'photo-input'}, label_html: { class: ' mr-10 p-3 border border-gray-200 text-3xl text-gray-600 bg-gray-200 rounded-lg px-auto hover:bg-gray-300 hover:border-gray-300'}, label: ('<i class="fa fa-camera fa-2x"></i>').html_safe, wrapper_html: { class: 'w-24' } %>

          <!-- INPUT PHOTO PREVIEW  -->
            <%= image_tag "", class: "hidden w-24 h-24 bg-gray-100 object-cover rounded-full ml-5 mb-2", id: "photo-preview" %>
        </div>

        <%= f.input :email, required: true, autofocus: true, input_html: { class: "input"}  %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :address,
                    required: false,
                    input_html: { class: "input", autocomplete: "New address" }%>
        <%= f.input :city,
                    required: false,
                    input_html: { class: "input", autocomplete: "New city" }%>
        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    input_html: { class: "input", autocomplete: "new-password", style: "margin-bottom: 0 !important;" },
                    hint_html: { class: "mt-1 mb-4 ml-2"} %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { class: "input", autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { class: "input", autocomplete: "current-password", style: "margin-bottom: 0 !important;" },
                    hint_html: { class: "mt-1 mb-4 ml-2"} %>

      </div>

      <!--Footer-->
      <div class="flex w-full md:pr-0 pt-2 items-center justify-between">
        <div class="my-auto cursor-pointer text-gray-600">
          <p>Unhappy?</p>
          <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"hover:underline hover:text-gray-700" %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Save" %>
        </div>
      </div>
    <% end %>

  </div>

</div>
