function refreshForm(innerHTML) {
  var newCommentForm = document.getElementById('comment_content');
  newCommentForm.innerHTML = innerHTML;
}

function addComment(commentHTML) {
  var comments = document.getElementById('comments');
  comments.insertAdjacentHTML('beforeend', commentHTML);
  window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
}


<% if @comment.errors.any? %>
  refreshForm('<%= j render "comments/form", publication: @publication, comment: @comment %>');
<% else %>
  addComment('<%= j render "comments/comment", comment: @comment %>');
  refreshForm('<%= j render "comments/form", publication: @publication, comment: Comment.new %>');
<% end %>

