      <div class="modal-edit-milestone opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center" id="<%= milestone.id %>">
        <div class="modal-edit-milestone-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>

        <div class="modal-edit-milestone-container bg-white w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">

          <div class="modal-edit-milestone-close absolute top-0 right-0 cursor-pointer flex flex-col items-center mt-4 mr-4 text-white text-sm z-50">
            <svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
              <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
            </svg>
            <!-- <span class="text-sm">(Esc)</span> -->
          </div>

          <!-- Add margin if you want to see some of the overlay behind the modal-->
          <div class="modal-edit-milestone-content py-4 text-left px-6">
            <!--Title-->
            <div class="flex justify-between items-center pb-3">
              <p class="text-2xl font-bold">Edit this milestone: </p>
              <div class="modal-edit-milestone-close cursor-pointer z-50">
<!--                 <svg class="fill-current text-black" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
                  <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
                </svg> -->
              </div>
            </div>

            <!--Body-->
            <%= simple_form_for milestone, url: goal_milestone_path(@goal, milestone) do |f| %>
                <%= f.input :description, input_html: { class: "input"}  %>
                <%= f.input :deadline, as: :string, required: false, input_html: { class: "input datepicker"} %>
            <!--Footer-->
            <div class="flex w-full pr-12 md:pr-0 pt-2 items-center justify-between">
              <button class="modal-edit-milestone-close cursor-pointer text-gray-600 hover:underline hover:text-gray-700">Close</button>
                <%= f.button :submit, class: "px-4 bg-transparent p-3 rounded-lg text-indigo-500 hover:bg-gray-100 hover:text-indigo-400 mr-2" %>
                <% end %>
            </div>
          </div>
        </div>
      </div>
