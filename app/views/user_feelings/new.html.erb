<%= simple_form_for [@user_feeling, @feelings], url: doctor_offers_path do |f| %>
  <div class="form-inputs">
    <%= f.input :specialty_id, collection: current_user.doctor.specialties %>
    <%= f.input :date_range, input_html: { class: "form-control input-sm date-range-picker range_date_input" } %>
    <%= f.input_field :start_date, as: :hidden, class: 'form-control input-sm start_hidden start_date_input' %>
    <%= f.input_field :end_date, as: :hidden, class: 'form-control input-sm end_hidden end_date_input' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Delete',
                doctor_offers_path,
                method: :delete,
                class: 'btn btn-danger',
                data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
